{
    "manifest_version":2,
    "name":"eli",
    "version": "1.0",
    "description":"Context menus based extenstion :dictionary and pronounciation",

    "icons":{
		"128" :"icon128.png",
		"48":"icon48.png",
		"16": "icon16.png"
	},

    
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon":"icon16.png"
    },
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },

    "options_page":"options.html",


    "permissions":[
        "tabs",
        "storage",
        "contextMenus",
        "tts"
    ]

}